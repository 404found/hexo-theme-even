//- Home
mixin home()
  ul.home
    - page.posts.each(function (item) {
      li.post-item
        article.post
          h1.post-title
            a.post-link(href=url_for(item.path))
              != item.title
          span.post-time
            != full_date(item.data, 'll')
          div.post-content
            != item.excerpt
          a.read-more(href=url_for(item.path))
            != __('more') 
    - })

//- Post
mixin post() 
  article.post
    h1.post-title
      != page.title
    span.post-time
      != full_date(page.data, 'll')
    .post-content
      != page.content
  
    
