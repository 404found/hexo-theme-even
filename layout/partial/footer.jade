//- social
if theme.social && is_home()
  div.social
    for link, name in theme.social
      a.iconfont(class="icon-#{name}" href=url_for(link)) 

//- Copyright
.copyright
  - var currentDate = new Date()
  - var year = currentDate.getFullYear()
  - var since = config.since
  if since
    - year = year == since ? year : since + '-' + year
    - copyright = '&copy;' + year
    
  p
    != copyright
    span.heart
      i.fa.fa-heart
    a.author(href=url_for(config.url))
      != config.author
    
//- Back to top
label#back2top
  i.fa.fa-chevron-up
