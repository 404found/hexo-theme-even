//- social
if theme.social
  div.social
    for link, name in theme.social
      a.iconfont(class="icon-#{name}" href=url_for(link)) 

//- Copyright
.copyright
  - var currentDate = new Date()
  - var year = currentDate.getFullYear()
  - var since = config.since
  if since
    - year = year == since ? year : "#{since}-#{year}"
    
  p &copy; #{year}
    span.heart
      i.fa.fa-heart
    a.author(href=url_for(config.url))
      != config.author

//- Sidebar toggle
if theme.sidebar.display != "remove"
  label.sidebar(for="sidebar-toggle")
    i.fa.fa-bars
    
//- Back to top
label#back2top
  i.fa.fa-chevron-up
